{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "emitDeclarationOnly": false,
    "types": ["node"],
    "rootDir": "src",
    "lib": ["dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "paths": {
      "@study/calculator-logic": ["../../libs/calculator-logic/src/index.ts"],
      "@study/helpers": ["../../libs/helpers/src/index.ts"],
      "@study/navbar": ["../../libs/navbar/src/index.ts"],
      "@study/pagetext": ["../../libs/pagetext/src/index.ts"]
    }
  },
  "exclude": [
    "out-tsc",
    "dist",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ],
  "include": ["src/**/*.ts"],
  "references": [
    {
      "path": "../../libs/pagetext/tsconfig.lib.json"
    },
    {
      "path": "../../libs/navbar/tsconfig.lib.json"
    },
    {
      "path": "../../libs/helpers/tsconfig.lib.json"
    }
  ]
}
